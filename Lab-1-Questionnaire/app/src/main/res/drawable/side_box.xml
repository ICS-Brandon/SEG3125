<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <item>

        <layer-list>

            <item>
                <shape>

                    <solid android:color="@color/BlueContrast"/>
                    <corners android:topLeftRadius="0dp" android:topRightRadius="8dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="8dp"/>

                </shape>
            </item>

            <item android:bottom="4dp">
                <shape>
                    <solid android:color="@color/BlueShadow"/>
                    <corners android:topLeftRadius="0dp" android:topRightRadius="8dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="8dp"/>
                </shape>
            </item>

        </layer-list>

    </item>

</selector>